html, body {
	margin: 0;
	padding: 0;
	height: 100%;
	width: 100%;
	background-color: #00bfff;
}

#container {
	height: 100%;
}

#headerLanguage {
	height: 100px;
	line-height: 100px;
	text-align: right;
	padding-right: 30px;
}

#footer {

	bottom : 0;
	width: 100%;
	height: 60px;
	line-height: 60px;
	vertical-align: middle;
	bottom: 0;
}

#dynamicContent {
	height: 100%;
	min-width: 100%;
	float: right;
	padding-bottom: -60px;
	display: table;
}

#allContent {
	display: table;
	height: 100%;
	box-sizing: border-box;
	padding-top: 160px;
	margin-top: -160px;
}

#leftContent {
	height: 100%;
	display: table-cell;
	margin-right: 10px;
	float: left;
}

#rightContent {
	height: 100%;
	display: table-cell;
	width: 100%;
}